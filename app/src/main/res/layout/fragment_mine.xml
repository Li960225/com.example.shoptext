<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mine.view.fragment.MineFragment">
    <ImageView
        android:id="@+id/iv_mine_header_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/tv_mine_header_longin"
        app:layout_constraintTop_toTopOf="@id/iv_mine_header_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_mine_header_img"
        app:layout_constraintLeft_toRightOf="@id/iv_mine_header_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_mine_header_forward"
        app:layout_constraintTop_toTopOf="@id/iv_mine_header_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_mine_header_img"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_forward"/>

</androidx.constraintlayout.widget.ConstraintLayout>