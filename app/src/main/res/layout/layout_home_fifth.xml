<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_fourth_two_img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="130dp"/>
    <TextView
        android:id="@+id/tv_make_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_fourth_two_img"
        app:layout_constraintTop_toTopOf="@id/iv_fourth_two_img" />

    <TextView
        android:id="@+id/tv_make_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_fourth_two_img"
        app:layout_constraintTop_toBottomOf="@id/tv_make_name" />

</androidx.constraintlayout.widget.ConstraintLayout>