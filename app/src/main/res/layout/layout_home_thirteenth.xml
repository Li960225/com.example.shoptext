<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_thirteenth_img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_thirteenth_name"
        app:layout_constraintTop_toBottomOf="@id/iv_thirteenth_img"
        app:layout_constraintLeft_toLeftOf="@id/iv_thirteenth_img"
        app:layout_constraintRight_toRightOf="@id/iv_thirteenth_img"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_thirteenth_price"
        app:layout_constraintTop_toBottomOf="@id/tv_thirteenth_name"
        app:layout_constraintLeft_toLeftOf="@id/iv_thirteenth_img"
        app:layout_constraintRight_toRightOf="@id/iv_thirteenth_img"
        android:textColor="#DF1414"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>