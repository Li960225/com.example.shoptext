<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".classification.view.ClassificationFragment">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_classification_first"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="50dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/iv_classification_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rv_classification_first"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="180dp"/>
    <TextView
        android:id="@+id/tv_classification_title"
        app:layout_constraintTop_toBottomOf="@id/iv_classification_img"
        app:layout_constraintLeft_toLeftOf="@id/iv_classification_img"
        app:layout_constraintRight_toRightOf="@id/iv_classification_img"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_classification_second"
        app:layout_constraintTop_toBottomOf="@id/tv_classification_title"
        app:layout_constraintLeft_toLeftOf="@id/iv_classification_img"
        app:layout_constraintRight_toRightOf="@id/iv_classification_img"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>