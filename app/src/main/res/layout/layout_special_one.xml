<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_special_img"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <TextView
        android:id="@+id/tv_specila_title"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="17dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/iv_special_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_specila_subtitle"
        android:gravity="center"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_specila_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_specila_price"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="#D61313"
        app:layout_constraintTop_toBottomOf="@id/tv_specila_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>